<view class="body">
    <swiper indicator-dots="true"
          autoplay="false" interval="2500" duration="400">
          <block wx:for="{{banner}}" wx:key="*this">
            <swiper-item>
            	<image src="{{item}}" ></image>
            </swiper-item>
          </block>
  	</swiper>

	<view class="post">
		<view class="post-item" bind:tap="handleTap" wx:for="{{[1,2,3,4]}}">
			<view class="post-header">
				<view class="avatar">
					<image src="../../images/avatar.png"></image>
				</view>
				<text class="name">NJUer</text>
				<text class="date">2024-1-1</text>
			</view>
			<view class="post-content">
				<view class="title">微信小程序文档</view>
				<view class="content">小程序提供了一个简单、高效的应用开发框架和丰富的组件及API，帮助开发者在微信中开发具有原生 APP 体验的服务。</view>
				<view class="images">
					<view class="image-item" wx:for="{{[1,2]}}">
						<image src="../../images/banner1.jpg"></image>
					</view>
				</view>
			</view>
			<view class="post-buttom">
				<view class="category">#灌水区</view>
				<view class="intereact">
					<view class="thumb">
						<image src="../../images/thumb.png"></image>
						<view class="thumb-count">114</view>
					</view>
					<view class="comment">
						<image src="../../images/comment.png"></image>
						<view class="comment-count">514</view>
					</view>
				</view>
			</view>
		</view>
	</view>
</view>
