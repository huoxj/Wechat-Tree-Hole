
.user-info{
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 10rpx;
	background-color: white;
	height: 100rpx;
}
.date{
	margin-left: auto;
	margin-right: 20rpx;
	color: #666;
	font-size: 30rpx;
}

.text-container{
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

.content{
	white-space: pre-wrap;
	word-wrap: break-word;
	font-size: 16px;
	line-height: 1.5;
}

.picture-container{
	display: inline-flex;
	white-space: nowrap;
}

.picture-item{
	display: inline-block;
	width: 400rpx;
	height: 400rpx;
	margin-right: 10rpx;
}

.comment-header{
	margin-top: -5rpx;
	margin-left: 18rpx;
	width: 95% ;
	background-color: #f4ebde;
	text-align: center;
	border-radius: 15rpx;
}

.comment-thumb{
	margin-left: auto;
	margin-right: 20rpx;
	margin-top: 20rpx;
}

.tabbar{
	position: fixed;
	bottom: 0;
	width: 100%;
	height: 100rpx;
	background-color: #f4ebde;
	display: flex;
	align-items: center;
	justify-content: center;
}

.tabbar .comment-input{
	background-color: #f3f3f3;
	width: 550rpx;
	height: 60rpx;
	border-radius: 20rpx;
	margin-left: 20rpx;
	
}
.tabbar .button{
	width: 40rpx;
	margin-left: auto;
	display: flex;
	flex-direction: column;
}
.tabbar .button image{
	width: 40rpx;
	height: 40rpx;
}
.tabbar .button text{
	font-size: 25rpx;
}